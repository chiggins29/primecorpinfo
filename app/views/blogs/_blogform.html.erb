<div class="container blog-background-color">
	<div class="row blog-form-container">
		<div class="container">
			<%= form_for @blog do |f| %>
			<div class="blog-form-padding">
				<%= f.text_field :catagory, placeholder: "Blog Catagory", class: "form-control blog-field-styes" %>
			</div>
			<div class="blog-form-padding">
				<%= f.text_field :title, placeholder: "Blog Title", class: "form-control blog-field-styes" %>
			</div>
			<div class="blog-form-padding">
				<%= f.text_field :description, placeholder: "Blog Description", class: "form-control blog-field-styes" %>
			</div>
			<div class="blog-form-padding">	
				<%= f.text_area :body, placeholder: "Blog Body", class: "form-control blog-field-styes" %>
			</div>
			<div class="blog-form-padding-btn">	
				<%= f.submit "Submit", rows: 15, class: "btn btn-primary form-control blog-btn" %>
			</div>
			<% end %>
		</div>
	</div>
</div>