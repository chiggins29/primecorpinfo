<div class="container blog-form-container">
	<div class="card">
		<div class="card-block">
			<%= form_for @blog do |f| %>
			<div class="card-block">
				<%= f.text_field :title, placeholder: "Blog Title", class: "form-control" %>
			</div>
			<div class="card-block">
				<%= f.text_field :description, placeholder: "Blog Description", class: "form-control" %>
			</div>
			<div class="card-block">	
				<%= f.text_area :body, placeholder: "Blog Body", class: "form-control" %>
			</div>	
				<%= f.submit "Submit", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>