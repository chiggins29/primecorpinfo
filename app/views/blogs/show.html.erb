<div class="container">	
	<h3><%= @blog.title %></h3>
	<hr>
	<h4>Catagory: <%= @blog.catagory %></h4>
	<h5><%= @blog.description %></h5>
	<p><%= @blog.body %></p>

	<%= link_to "Back", blogs_path %>
	<%= link_to "Edit", edit_blog_path(@blog) if logged_in?(:admin) %>
	<%= link_to "Delete", @blog, method: :delete, data: {confirm: "Are you sure you want to delete this video?"} if logged_in?(:admin) %>
</div>