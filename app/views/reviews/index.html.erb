<% @reviews.each do |review| %>
	<%= link_to review.full_name, review_path(review.id) %><br>
	<%= review.service_purchased %><br>
	<%= review.body %><br>
	<%= link_to review.status, toggle_status_review_path(review) if logged_in?(:admin) %><br><hr>
<% end %>

<%= link_to "Leave A Review Now", new_review_path, class: "btn btn-primary" %>